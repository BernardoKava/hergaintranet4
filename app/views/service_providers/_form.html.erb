<% provide(:title, "Service Providers") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%= form_with(model: service_provider, local: true) do |form| %>
  <% if service_provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service_provider.errors.count, "error") %> prohibited this service_provider from being saved:</h2>

      <ul>
      <% service_provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>


    <%= form.label :address %>
