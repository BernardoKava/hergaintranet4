<% provide(:title, "Service Providers") %>
<p id="notice"><%= notice %></p>

<h1>Service Providers</h1>


<div class="jumbotron">

  <table class="table table-hover">
    <thead>
    <tr>
      <th >Name</th>
      <th >Email</th>
      <th >Acc number</th>
      <th >Active</th>
      <th >User Email</th>
      <th ></th>
      <th ></th>
      <th ></th>
    </tr>
    </thead>
    <tbody>
    <% @service_providers.each do |service_provider| %>
      <tr>
        <td class="col-xs-1" ><span><%= link_to service_provider.name , service_provider.link %></span></td>
        <td class="col-xs-1"><span><%= service_provider.email %></span></td>
        <td class="col-xs-1" ><span><%= service_provider.acc_number %></span></td>
        <td class="col-xs-1" ><span><%= service_provider.active.humanize %></span></td>
        <td class="col-xs-1" ><span><%= service_provider.user.email %></span></td>
        <td class="col-xs-1" ><%= link_to 'View', service_provider, class: "fa fa-eye" %></td>

        <% if current_user.admin == true %>
          <td  class="col-xs-1"><%= link_to 'Edit', edit_service_provider_path(service_provider), class: "fa fa-pencil" %></td>
          <td class="col-xs-1"><%= link_to 'Delete', service_provider, method: :delete, data: { confirm: 'Are you sure?' },
                          class: "fa fa-close"%></td>

        <% end %>

      </tr>
    <% end %>
    </tbody>
  </table>








  <br>
  <hr>


  <div class="links">
    <% if current_user.admin == true %>
      <%= link_to 'New Service Provider', new_service_provider_path, class:'fa fa-plus-circle' %>
    <% end %>

  </div>
  <hr>


</div>

<%= will_paginate @service_providers %>