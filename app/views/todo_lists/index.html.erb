<% provide(:title, "ToDo Lists") %>
<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>


<% @todo_lists.each do |todo_list| %>
  <hr>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
    <p class="todo_list_sub_title"><%= todo_list.description %></p>
  </div>

<% end %>

<hr>
<div class="links">
  <%= link_to "New ToDo List", new_todo_list_path, class:"fa fa-pencil" %>
</div>


<%= will_paginate @todo_lists%>






