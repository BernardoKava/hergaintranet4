<% provide(:title, "Diary") %>

<p id="notice"><%= notice %></p>

<h1>Diary Entries</h1>


<hr>
<%= link_to 'New Entry', new_diary_path, class: "btn btn-primary" %>

<hr>

<%= month_calendar(events:@diaries, attribute: :start_time, end_attribute: :end_time) do |day, diaries| %>

  <div> <%= day %></div>


  <% diaries.each do |diary| %>
    <div class = "meeting_display">
      <Strong><%= link_to diary.name, diary %></Strong>
      <hr>
    </div>

  <% end %>

<% end %>

<hr>
<hr>


<table class=" table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Logged by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activeentries.each do |diary| %>
      <tr>
        <td class = "text"><%= diary.name %></td>
        <td class = "text"><%= diary.start_time %></td>
        <td class = "text"><%= diary.end_time %></td>
        <td><%= diary.user.email %></td>
        <td><%= link_to 'Show', diary %></td>
        <% if diary.user.email == current_user.email %>
        <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
        <% end %>
        <% if current_user.admin == true %>
        <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= will_paginate @activeentries%>