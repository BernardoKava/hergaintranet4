<% provide(:title, "Service Providers") %>
<h1><%= link_to "My Dashboard", dashboard_index_path, class: "fa fa-dashboard" %></h1>
<hr>


<h2><%= link_to "View Resources",resources_path, class: "fa fa-database" %></h2>
<hr>
<table class="table table-fixed">
  <thead>
  <tr>
    <th class="col-xs-1">Name</th>
    <th class="col-xs-10">Description</th>
    <th class="col-xs-1">User email</th>
    <th class="col-xs-1"></th>
    <th class="col-xs-1"></th>
    <th class="col-xs-1"></th>
  </tr>
  </thead>

  <tbody>
  <% @resources.each do |resource| %>
    <tr>
      <td class="col-xs-1"><%= resource.name %></td>
      <td class="col-xs-10"><%= resource.description %></td>
      <td class="col-xs-1"><%= resource.user.email %></td>
      <td class="col-xs-1"><%= link_to 'View', resource,class: "fa fa-eye"  %></td>

      <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_resource_path(resource),class: "fa fa-pencil" %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' },class: "fa fa-close" %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>



<hr>
<hr>
<h2><%= link_to "View Service Providers",service_providers_path, class: "fa fa-database" %></h2>
<hr>
<table class="table table-fixed">
  <thead>
  <tr>
    <th class="col-xs-1">Name</th>
    <th class="col-xs-5">Address</th>
    <th class="col-xs-1">Telephone</th>
    <th class="col-xs-1">Email</th>
    <th class="col-xs-1">Acc number</th>
    <th class="col-xs-1">User Email</th>
    <th class="col-xs-1"></th>
    <th class="col-xs-1"></th>
    <th class="col-xs-1"></th>

  </tr>
  </thead>
  <tbody>
  <% @service_providers.each do |service_provider| %>
    <tr>
      <td class="col-xs-1"><%= service_provider.name %></td>
      <td class="col-xs-5"><%= service_provider.address %></td>
      <td class="col-xs-1"><%= service_provider.telephone %></td>
      <td class="col-xs-1"><%= service_provider.email %></td>
      <td  class="col-xs-1"><%= service_provider.acc_number %></td>
      <td  class="col-xs-1"><%= service_provider.user.email %></td>
      <td  class="col-xs-1"><%= link_to 'View', service_provider, class: "fa fa-eye" %></td>

      <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_service_provider_path(service_provider), class: "fa fa-pencil" %></td>
        <td><%= link_to 'Delete', service_provider, method: :delete, data: { confirm: 'Are you sure?' },
                        class: "fa fa-close"%></td>

      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @service_providers %>


<hr>
<hr>

<h2><%= link_to "House Planner / Calendar",meetings_path, class: "fa fa-database" %></h2>
<hr>

<%= month_calendar(events:@meetings, attribute: :start_time, end_attribute: :end_time) do |day, meetings| %>

  <div> <%= day %></div>


  <% meetings.each do |meeting| %>
    <div class = "meeting_display">
      <Strong><%= link_to meeting.name, meeting %></Strong>
      <hr>
    </div>

  <% end %>

<% end %>







