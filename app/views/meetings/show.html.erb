<p id="notice"><%= notice %></p>
<hr>
<p>
  <strong>Name:</strong>
  <%= @meeting.name %>
</p>
<hr>
<p>
  <strong>Start time:</strong>
  <%= @meeting.start_time %>
</p>
<hr>
<p>
  <strong>End time:</strong>
  <%= @meeting.end_time %>
</p>
<hr>
<p>
  <strong>Address:</strong>
  <%= @meeting.address %>
</p>
<hr>
<p>
  <strong>Longitude:</strong>
  <%= @meeting.longitude %>
</p>
<hr>
<p>
  <strong>Latitude:</strong>
  <%= @meeting.latitude %>
</p>
<hr>
<p>
  <strong>Description:</strong>
  <textarea class="input_text_area" rows="4" cols="150" readonly>
  <%= @meeting.description %>
  </textarea>
</p>
<hr>
<p>
  <strong>Comments:</strong>
  <textarea class="input_text_area" rows="4" cols="150" readonly>
  <%= @meeting.comments %>
  </textarea>
</p>
<hr>



<div class="links">
  <% if @meeting.user.email == current_user.email %>
    <%= link_to 'Edit', edit_meeting_path(@meeting), class: "fa fa-pencil"  %> |
  <% end %>
  <%= link_to 'Back', meetings_path, class:"fa fa-arrow-circle-o-left" %>
</div>
